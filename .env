# Code Agent Configuration

# Application
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# LLM Provider Selection: "ollama" or "anthropic"
LLM_PROVIDER=anthropic

# Local LLM (Ollama) - Using your available model
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_EMBEDDING_MODEL=gpt-oss:20b

# Anthropic Claude Configuration
# API key is entered at runtime for security - do not store here!
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_TEMPERATURE=0.2
ANTHROPIC_MAX_TOKENS=10000

# Agent
AGENT_MAX_ITERATIONS=50
AGENT_TIMEOUT=300
AGENT_MEMORY_ENABLED=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/code_agent.db

# Terminal (Windows)
TERMINAL_SHELL=powershell.exe

# Security
SECRET_KEY=dev-secret-key-for-testing
